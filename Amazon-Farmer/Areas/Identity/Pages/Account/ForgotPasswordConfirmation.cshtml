@page
@using Amazon_Farmer.Areas.Identity.Pages.Account;
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Forgot password confirmation";
}




<section id="login">
    <div class="container-fluid">
        <div class="row full-height-vh">
            <div class="col-12 d-flex align-items-center justify-content-center Main-bg-red">
                <div class="card px-4 py-2 box-shadow-2 width-400">
                    <div class="card-header text-center">
                        <img src="~/img/chajaoLogo.png" alt="company-logo" class="mb-3  rounded" width="140">
                        <h4 class="text-uppercase text-bold-400 grey darken-1">Login</h4>
                    </div>
                    <div class="card-body">
                        <div class="card-block">
                            <h3>@ViewData["Title"]</h3>
                            <p>
                                Please check your email to reset your password.
                            </p>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>
